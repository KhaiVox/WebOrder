<div class='container-wrap__login register-mode'>
    <div class='form-container__login'>
        <div class='content-left'>
            <form action='#' class='form-action-login'>
                <h2 class='title'>Đăng Ký</h2>
                <div class='input-field'>
                    <input type='text' placeholder='Username' />
                    <ion-icon name='person'></ion-icon>
                </div>
                <div class='input-field'>
                    <ion-icon name='lock-closed'></ion-icon>
                    <input class='input-password' type='password' placeholder='Password' />
                </div>
                <div class='input-field'>
                    <input type='text' placeholder='Name' />
                    <ion-icon name='man'></ion-icon>
                </div>
                {{! <div class='input-field'>
                    <input type='text' placeholder='Address' />
                    <ion-icon name='location'></ion-icon>
                </div> }}
                <div class='input-field'>
                    <input type='text' placeholder='Phone' />
                    <ion-icon name='call'></ion-icon>
                </div>
                <button type='submit' class='btn btn-login'>Đăng Ký</button>
                <div class='social'>
                    <a class='social-link' href='#my-modal--register'>Hoặc đăng ký với Google</a>
                </div>
            </form>
        </div>
        <div class='content-right'>
            <div class='panel-content'>
                <h1>Welcome to Register</h1>
                <span class='loader'></span>
                <div class='btn-pass'><a href='/user/login'></a></div>
                <img style='width: 100%;' src='https://mycolor.space/img/color-scheme-right.svg' alt='' />
            </div>
        </div>
    </div>
</div>

<!-- Modal Layout -->
<div class='modal' id='my-modal--register'>
    <div class='modal__overlay'></div>
    <a href='#' class='overlay-close'></a>

    <div class='modal__body'>
        <!-- Register Form -->
        <div class='auth-form form-login'>
            <div class='form-content'>
                <form action='#' class='google-login'>
                    <div class='wrap-logo'>
                        <img
                            class='logo-google'
                            src='https://upload.wikimedia.org/wikipedia/commons/thumb/2/2f/Google_2015_logo.svg/2560px-Google_2015_logo.svg.png'
                            alt=''
                        />
                    </div>
                    <div class='input-field'>
                        <input type='text' placeholder='Name' />
                        <ion-icon name='man'></ion-icon>
                    </div>
                    <div class='input-field'>
                        <input type='text' placeholder='Address' />
                        <ion-icon name='location'></ion-icon>
                    </div>
                    <div class='input-field'>
                        <input type='text' placeholder='Phone' />
                        <ion-icon name='call'></ion-icon>
                    </div>

                    <button type='submit' class='btn btn-login btn-login--google'>
                        Đăng ký với google
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>