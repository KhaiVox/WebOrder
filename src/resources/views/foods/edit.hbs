<div class='container-left'>
    {{> sidebar }}
</div>
<div class='container-right'>
    <div class='create'>
        <div class='create-header'>Chi tiết sản phẩm</div>
        <form method='POST' action='/foods/{{food._id}}?_method=PUT'>
            <div class='create-item'>
                <div class='create-title'>Tên sản phẩm :</div>
                <input type='text' class='create-input' name='name' id='name' value='{{food.name}}' />
            </div>
            <div class='create-item'>
                <div class='create-title'>Loại :</div>
                {{! <select class='create-input' name='' id=''>
                            <option value=''>Món nước</option>
                            <option value=''>Món mặn</option>
                        </select> }}
                <input type='text' class='create-input' name='type' id='type' value='{{food.type}}' />
            </div>
            <div class='create-item'>
                <div class='create-title'>Đơn giá :</div>
                <input type='text' class='create-input' name='price' id='price' value='{{food.price}}' />
            </div>
            <div class='create-item'>
                <div class='create-title'>Hình :</div>
                <input type='text' class='create-input' name='img' id='img' value='{{food.img}}' />
            </div>
            <div class='create-button'>
                <button class='btn create-confirm'>Lưu thông tin</button>
            </div>
        </form>
        <a href='/foods'>
            <button class='btn create-quit'>↩ Quay lại</button>
        </a>
    </div>
</div>