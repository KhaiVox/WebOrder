<div class='container-wrap__login'>
    <div class='form-container__login'>
        <div class='content-left'>
            <div class='panel-content'>
                <h1>Welcome to Login</h1>
                <span class='loader'></span>
                <div class='btn-pass'><a href='/user/register'></a></div>
                <img style='width: 100%;' src='https://mycolor.space/img/color-scheme-left.svg' alt='' />
            </div>
        </div>
        <div class='content-right'>
            {{!-- <form action='/' class='form-action-login' method="POST"> --}}
            <form class='form-action-login'>
                <h2 class='title'>Đăng Nhập</h2>
                <div class='input-field'>
                    <input required type='text' placeholder='Tên đăng nhập' id='username' />
                    <ion-icon name='person'></ion-icon>
                </div>
                <div class='input-field'>
                    <ion-icon name='lock-closed'></ion-icon>
                    <input class='input-password' required type='password' placeholder='Mật khẩu' id='password' />
                </div>
                <div class='form-more'>
                    <p class="text hidden"> Tài khoản hoặc mật khẩu chưa chính xác !
                </div> 
                <div class='form-more'>
                    <label for='checkbox'>
                        <input class='checkToggle' type='checkbox' onclick='showHidePassword()' />
                        Hiện mật khẩu
                    </label>
                    <p class='text-forget'>Quên mật khẩu ?</p>
                </div>
                
                <button type='submit' onclick="handleLogin()" class='btn btn-success btn-login'>Đăng Nhập</button>
            </form>
        </div>
    </div>
</div>
